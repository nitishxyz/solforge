{
	"extends": "//",
	"linter": {
		"rules": {
			"suspicious": {
				"noUnknownAtRules": "off"
			}
		}
	},
	"overrides": [
		{
			"includes": ["src/App.tsx"],
			"linter": {
				"rules": {
					"correctness": {
						"useExhaustiveDependencies": "off"
					}
				}
			}
		},
		{
			"includes": ["src/components/chat/ChatInput.tsx"],
			"linter": {
				"rules": {
					"correctness": {
						"useExhaustiveDependencies": "off"
					}
				}
			}
		},
		{
			"includes": ["src/components/chat/ConfigModal.tsx"],
			"linter": {
				"rules": {
					"a11y": {
						"useSemanticElements": "warn"
					},
					"correctness": {
						"useUniqueElementIds": "warn"
					}
				}
			}
		},
		{
			"includes": ["src/hooks/useMessages.ts", "src/main.tsx"],
			"linter": {
				"rules": {
					"style": {
						"noNonNullAssertion": "warn"
					}
				}
			}
		},
		{
			"includes": ["src/lib/config.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "warn"
					}
				}
			}
		}
	]
}
