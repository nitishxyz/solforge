{
  "name": "solforge",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "cli": "bun src/cli/main.ts",
    "build:bin": "bun build --compile src/cli/main.ts --outfile dist/solforge",
    "build:bin:darwin-arm64": "bun build --compile --target=bun-darwin-arm64 src/cli/main.ts --outfile dist/solforge-darwin-arm64",
    "build:bin:darwin-x64": "bun build --compile --target=bun-darwin-x64 src/cli/main.ts --outfile dist/solforge-darwin-x64",
    "build:bin:linux-x64": "bun build --compile --target=bun-linux-x64 src/cli/main.ts --outfile dist/solforge-linux-x64",
    "build:bin:linux-arm64": "bun build --compile --target=bun-linux-arm64 src/cli/main.ts --outfile dist/solforge-linux-arm64",
    "build:bin:windows-x64": "bun build --compile --target=bun-windows-x64 src/cli/main.ts --outfile dist/solforge-windows-x64.exe"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@solana-program/compute-budget": "^0.9.0",
    "@solana-program/memo": "^0.8.0",
    "@solana-program/system": "^0.8.0",
    "@solana-program/token": "^0.6.0",
    "@solana/kit": "^3.0.3",
    "@solana/spl-token": "^0.4.14",
    "drizzle-orm": "^0.44.5",
    "litesvm": "^0.3.3"
  }
}
